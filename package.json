{
  "name": "hexagon-react",
  "version": "1.0.0",
  "description": "A React wrapper for HexagonJS",
  "main": "dist/hexagon-react.js",
  "scripts": {
    "build": "webpack --config webpack.config.js",
    "start": "webpack --config webpack.test.config.js --watch & browser-test-runner watch test.html",
    "test": "npm run build && webpack --config webpack.test.config.js && browser-test-runner run test.html",
    "run-test": "browser-test-runner run test.html",
    "prep-site": "cp -r bower_components/hexagon-js/dist/hexagon-light target/hexagon-js && cp -r bower_components/font-awesome target/font-awesome && cp -r node_modules/react/dist target/react && cp -r node_modules/react-dom/dist target/react-dom",
    "site": "quantum watch"
  },
  "author": "James Smyth <jmsmyth@users.noreply.github.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-core": "^6.7.4",
    "babel-istanbul": "^0.7.0",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babelify": "^7.2.0",
    "browser-test-runner": "^0.2.0",
    "browserify": "^13.0.0",
    "chai": "^3.5.0",
    "isparta-loader": "^2.0.0",
    "istanbul": "^1.0.0-alpha.2",
    "mocha": "^2.4.5",
    "react": "^0.14.7",
    "react-dom": "^0.14.8"
  }
}
