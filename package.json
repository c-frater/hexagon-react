{
  "name": "hexagon-react",
  "version": "1.0.0",
  "description": "A React wrapper for HexagonJS",
  "main": "dist/hexagon-react.js",
  "scripts": {
    "build": "babel hexagon-react.jsx --out-file target/hexagon-react.js",
    "build-test-lib": "webpack --config webpack.test.config.js",
    "build-test": "babel test.jsx --out-file target/hexagon-react.test.js",
    "start": "babel hexagon-react.jsx --watch --out-file dist/hexagon-react.js",
    "run-tests":  "browser-test-runner run test.html",
    "test": "npm run build-test-lib",
    "prep-site": "cp -r bower_components/hexagon-js/dist/hexagon-light target/hexagon-js && cp -r bower_components/font-awesome target/font-awesome && cp -r node_modules/react/dist target/react && cp -r node_modules/react-dom/dist target/react-dom"
  },
  "author": "James Smyth <jmsmyth@users.noreply.github.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-core": "^6.7.4",
    "babel-istanbul": "^0.7.0",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-react-jsx": "^6.7.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "chai": "^3.5.0",
    "istanbul": "^1.0.0-alpha.2",
    "jsdom": "^8.1.0",
    "mocha": "^2.4.5",
    "react": "^0.14.7"
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ]
  }
}
